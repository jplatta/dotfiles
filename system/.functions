# Create a new directory and enter it
function mk() {
  mkdir -p "$@" && cd "$@"
}

# Open man page as PDF
function manpdf() {
  man -t "${1}" | open -f -a /Applications/Preview.app/
}

# get procore-reporting schemas
get_all_pcr_schemas() {
  find . -path "*lib/procore_reporting/bi_temporal/schemas/*.ex" |
    xargs cat |
    grep BiTemp.*do |
    sed 's/def.*BiT.*\.\(.*\) do/\1/' |
    sort
}

# Source zshrc
src_zsh(){
  source $HOME/.zshrc
  echo ".zshrc loaded"
}

# Source aliases
src_als(){
  source $HOME/.aliases
  echo ".aliases loaded"
}

# Source functions
src_funs(){
  source $HOME/.functions
  echo ".functions loaded"
}
